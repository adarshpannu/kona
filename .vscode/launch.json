    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Run main executable 'flare'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=flare",
                    "--package=flare"
                ],
                "filter": {
                    "name": "flare",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Run unit tests",
            "cargo": {
                "args": [
                    "test",
                    "run_unit_tests",
                    "--",
                    "--nocapture"
                ],
                "filter": {
                    "name": "flare",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
    ]
}